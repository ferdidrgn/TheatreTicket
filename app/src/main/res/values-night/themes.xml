<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheatreTicket" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Primary Color -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/dark2</item>
        <item name="colorOnPrimary">@color/dark3</item>
        <item name="colorPrimaryFixed">@color/dark4</item>
        <item name="colorOnPrimarySurface">@color/dark5</item>

        <!-- Secondary Color -->
        <item name="colorSecondary">@color/dark6</item>
        <item name="colorSecondaryVariant">@color/dark7</item>
        <item name="colorOnSecondary">@color/white_light</item>
        <item name="colorOnSecondaryFixed">@color/pink_light</item>

        <!-- Background Color -->
        <item name="colorSurface">@color/pink_success</item>
        <item name="colorOnSurface">@color/red_err</item>
        <item name="colorOnSurfaceVariant">@color/red</item>
        <item name="colorOnSurfaceInverse">@color/green_light</item>
        <item name="colorOnTertiary">@color/blue_light</item>

    </style>

    <!-- Customize style -->
    <style name="ScreenBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="CardBackgroundTint_StrokeColor">
        <item name="android:backgroundTint">@color/dark2</item>
        <item name="strokeColor">@color/dark4</item>
        <item name="strokeWidth">3dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="ShapeableImageViewStyle">
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearanceOverlay">@style/ImageView.SquareBorder</item>
        <item name="strokeColor">@color/dark2</item>
        <item name="strokeWidth">12dp</item>
    </style>

    <style name="BottomNavBar">
        <item name="android:background">@color/black</item>
        <item name="itemIconTint">@color/bottom_nav_bar_text_color_dark</item>
        <item name="itemTextColor">@color/bottom_nav_bar_text_color_dark</item>
    </style>

    <style name="PageIndicatorView">
        <item name="piv_animationType">worm</item>
        <item name="piv_dynamicCount">true</item>
        <item name="piv_interactiveAnimation">true</item>
        <item name="piv_padding">3dp</item>
        <item name="piv_radius">4.5dp</item>
        <item name="piv_selectedColor">@color/dark3</item>
        <item name="piv_unselectedColor">@color/dark2</item>
        <item name="elevation">1dp</item>
    </style>

    <style name="ImgStrokeColor">
        <item name="android:strokeColor">@color/dark2</item>
    </style>

    <style name="ImgStrokeColor2">
        <item name="strokeColor">@color/dark4</item>
    </style>

    <style name="CardBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="TintBlueLight">
        <item name="android:tint">@color/dark8</item>
    </style>

    <style name="FillColorPrimary3">
        <item name="fillColor">@color/dark3</item>
    </style>

    <style name="FillColorPrimary2">
        <item name="fillColor">@color/dark2</item>
    </style>

    <style name="ViewBackground">
        <item name="android:background">@color/dark8</item>
    </style>

    <style name="CstBtnColorPrimary2">
        <item name="cst_btn_color">@color/dark2</item>
    </style>

    <style name="TextInputBackground_TextColor">
        <item name="android:background">@drawable/bg_dark2_10_border_dark3</item>
        <item name="android:textColor">@color/dark7</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/dark7</item>
    </style>

    <style name="TextColor2">
        <item name="android:textColor">@color/white_light</item>
    </style>

    <style name="PopUpBtnNegative">
        <item name="android:background">@drawable/bg_dark4_10</item>
    </style>

    <style name="PopUpBtnPositive">
        <item name="android:background">@drawable/bg_dark3_10</item>
    </style>

    <style name="TextColorHint">
        <item name="android:textColorHint">@color/dark7</item>
    </style>

    <style name="TextColorHintAndTextColor">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/dark7</item>
        <item name="android:textColor">@color/dark7</item>
    </style>

    <style name="ImgTintColor">
        <item name="android:tint">@color/dark8</item>
    </style>

    <style name="CstToolbarBg">
        <item name="android:background">@color/black</item>
    </style>

    <style name="rounded_primary2_10_border_primary3">
        <item name="android:background">@drawable/bg_dark2_10_border_dark3</item>
        <item name="android:textColor">@color/white_light</item>
    </style>

    <style name="rectangle_primary2_border_primary3">
        <item name="android:background">@drawable/bg_rectangle_dark2_border_dark3</item>
    </style>

    <style name="rectangle_primary2_10_border_error_red">
        <item name="android:background">@drawable/bg_dark2_10_border_error_red</item>
    </style>

    <style name="rectangle_top_10_primary2_border_primary3">
        <item name="android:background">@drawable/bg_top_10_dark2_border_dark3</item>
    </style>

    <style name="rectangle_bottom_10_primary2_border_primary3">
        <item name="android:background">@drawable/bg_bottom_10_dark2_border_dark3</item>
    </style>

    <style name="rectangle_primary6_10_border_primary3">
        <item name="android:background">@drawable/bg_dark6_10_border_dark3</item>
    </style>

</resources>