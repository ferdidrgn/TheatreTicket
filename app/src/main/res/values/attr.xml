<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomEditText">
        <attr name="custom_edit_hint" format="string" />
        <attr name="custom_edit_input" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomNumberEditText">
        <attr name="cst_number_edit_text" format="string" />
        <attr name="cst_number_hint_text" format="string" />
        <attr name="cst_number_add_plus" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="cst_btn_name" format="string" />
        <attr name="cst_btn_color" format="reference" />
        <attr name="cst_btn_endIcon" format="integer" />
        <attr name="cst_btn_backgroundColorFromXml" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomToolbar">
        <attr name="cst_toolbar_closeIcon_visible" format="boolean" />
        <attr name="cst_toolbar_backIcon_visible" format="boolean" />
        <attr name="cst_toolbar_text" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomPhone">
        <attr name="cst_phone_icon_visibility" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomDatePicker">
        <attr name="cst_date_picker_hint_text" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomPhoneCodeSpinner">
        <attr name="cst_phone_code_hint_text" format="string" />
    </declare-styleable>

</resources>