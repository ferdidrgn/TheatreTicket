<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Customize your light theme here. -->
    <style name="Theme.TheatreTicket" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Primary Color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary2</item>
        <item name="colorOnPrimary">@color/primary3</item>
        <item name="colorPrimaryFixed">@color/primary4</item>
        <item name="colorOnPrimarySurface">@color/primary5</item>

        <!-- Secondary Color -->
        <item name="colorSecondary">@color/primary6</item>
        <item name="colorSecondaryVariant">@color/pink</item>
        <item name="colorOnSecondary">@color/primary7</item>
        <item name="colorOnSecondaryFixed">@color/primary</item>

        <!-- Background Color -->
        <item name="colorSurface">@color/pink</item>
        <item name="colorOnSurface">@color/red_err</item>
        <item name="colorOnSurfaceVariant">@color/red_err</item>
        <item name="colorOnSurfaceInverse">@color/green_light</item>
        <item name="colorOnTertiary">@color/primary10</item>

    </style>

    <!-- Customize style -->
    <style name="ScreenBackground">
        <item name="android:background">@color/primary2</item>
    </style>

    <style name="CardBackgroundTint_StrokeColor">
        <item name="android:backgroundTint">@color/primary2</item>
        <item name="strokeColor">@color/primary4</item>
        <item name="strokeWidth">3dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="ShapeableImageViewStyle">
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearanceOverlay">@style/ImageView.SquareBorder</item>
        <item name="strokeColor">@color/primary2</item>
        <item name="strokeWidth">12dp</item>
    </style>

    <style name="BottomNavBar">
        <item name="android:background">@color/primary</item>
        <item name="itemIconTint">@color/bottom_nav_bar_text_color</item>
        <item name="itemTextColor">@color/bottom_nav_bar_text_color</item>
    </style>

    <style name="PageIndicatorView">
        <item name="piv_animationType">worm</item>
        <item name="piv_dynamicCount">true</item>
        <item name="piv_interactiveAnimation">true</item>
        <item name="piv_padding">3dp</item>
        <item name="piv_radius">4.5dp</item>
        <item name="piv_selectedColor">@color/primary3</item>
        <item name="piv_unselectedColor">@color/primary4</item>
        <item name="elevation">1dp</item>
    </style>

    <style name="ImgStrokeColor">
        <item name="strokeColor">@color/primary2</item>
    </style>

    <style name="ImgStrokeColor2">
        <item name="strokeColor">@color/primary4</item>
    </style>

    <style name="CardBackground_primary">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="CardBackgroundTint_primary3">
        <item name="android:backgroundTint">@color/primary3</item>
    </style>

    <style name="FillColorPrimary3">
        <item name="fillColor">@color/primary3</item>
    </style>

    <style name="FillColorPrimary2">
        <item name="fillColor">@color/primary2</item>
    </style>

    <style name="ViewBackground">
        <item name="android:background">@color/primary5</item>
    </style>

    <style name="CstBtnColorPrimary2">
        <item name="cst_btn_color">@color/primary2</item>
    </style>

    <style name="TextInputBackground_TextColor">
        <item name="android:background">@drawable/bg_primary2_10_border_primary3</item>
        <item name="android:textColor">@color/primary8</item>
    </style>

    <style name="TextColorHeader">
        <item name="android:textColor">@color/primary10</item>
    </style>

    <style name="TextColor_primary4">
        <item name="android:textColor">@color/primary4</item>
    </style>

    <style name="TextColor_primary8">
        <item name="android:textColor">@color/primary8</item>
    </style>

    <style name="PopUpBtnNegative">
        <item name="android:background">@drawable/bg_primary4_10</item>
    </style>

    <style name="PopUpBtnPositive">
        <item name="android:background">@drawable/bg_primary3_10</item>
    </style>

    <style name="TextColorHint">
        <item name="android:textColorHint">@color/pink</item>
        <item name="android:textColor">@color/primary8</item>
    </style>

    <style name="TextColorHintAndTextColor">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/pink</item>
        <item name="android:textColor">@color/primary8</item>
    </style>

    <style name="ImgTintColor">
        <item name="android:tint">@color/primary4</item>
    </style>

    <style name="CstToolbarBg">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="rounded_primary2_10_border_primary3">
        <item name="android:background">@drawable/bg_primary2_10_border_primary3</item>
        <item name="android:textColor">@color/primary6</item>
    </style>

    <style name="rectangle_primary2_border_primary3">
        <item name="android:background">@drawable/bg_rectangle_primary2_border_primary3</item>
    </style>

    <style name="rectangle_primary2_10_border_error_red">
        <item name="android:background">@drawable/bg_primary2_10_border_pink</item>
    </style>

    <style name="rectangle_top_10_primary2_border_primary3">
        <item name="android:background">@drawable/bg_top_10_primary2_border_primary3</item>
    </style>

    <style name="rectangle_bottom_10_primary2_border_primary3">
        <item name="android:background">@drawable/bg_bottom_10_primary2_border_primary3</item>
    </style>

    <style name="rectangle_primary6_10_border_primary3">
        <item name="android:background">@drawable/bg_primary6_10_border_primary3</item>
    </style>


    <style name="DialogTheme_transparent" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">
            @drawable/rounded_primary3_2_radius_10
        </item>
        <!--You can set other style items also, such as animations and etc-->
    </style>

    <style name="bottomSheetDialog" parent="bottomSheetDialog.Base" />

    <style name="bottomSheetDialog.Base" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustResize</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.0</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="behavior_draggable">false</item>
    </style>

    <style name="ImageView.SquareBorder" parent="">
        <item name="cornerSize">8%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ImageView.Corner8" parent="">
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.Corner20DP" parent="">
        <item name="cornerSize">20dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners_all" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">25dp</item>
        <item name="cornerSizeTopLeft">25dp</item>
        <item name="cornerSizeBottomRight">25dp</item>
        <item name="cornerSizeBottomLeft">25dp</item>
    </style>
</resources>